#! /usr/bin/env python3

import os
import sys
from ase.io import read
from ase.io import write

'''
read structure from .gen file,
write .xyz file.

Usage:
    gen_ase [genfile_name] {xyz_geom_file.py}
'''

genfname = sys.argv[1]

try:
    xyzfname = sys.argv[2]
except IndexError:
    xyzfname = 'from_gen.xyz'

atoms = read(genfname, )
print(atoms)
write(xyzfname, atoms, format='xyz')

